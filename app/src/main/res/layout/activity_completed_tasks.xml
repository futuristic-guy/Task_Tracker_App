<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pallete_color"
    tools:context=".CompletedTasks">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/completedTasksRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/clearHistoryLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
app:layout_constraintVertical_weight="1"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        />
    <LinearLayout
        android:id="@+id/clearHistoryLinear"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"

        android:background="@color/button_background"
        >

        <Button
            android:id="@+id/clearHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_background"
            android:textColor="@color/screen_background"
            android:text="Clear History"
            android:textStyle="bold"
            android:textSize="23sp"
            android:paddingVertical="7dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>