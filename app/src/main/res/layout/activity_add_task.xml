<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_background"
    tools:context=".AddTask">


    <EditText
        android:id="@+id/writtenTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write Task"
        android:textSize="24sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:textColorHint="@color/pallete_color"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/screen_background"
         />

    <Button
        android:id="@+id/addTaskToDb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/writtenTask"
        android:background="@color/screen_background"
        android:layout_marginHorizontal="40dp"
        android:text="Add Task"
        android:textSize="22sp"
        android:textColor="@color/button_background"
        app:layout_constraintLeft_toLeftOf="@id/writtenTask"
        app:layout_constraintRight_toRightOf="@id/writtenTask"
        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>